---
import { Image } from "astro:assets";
import headerImage from "../assets/header.jpg";
import * as m from "../paraglide/messages.js";
---

<div class="mx-4 max-w-screen-lg pt-10 text-center md:pt-44 lg:mx-auto">
  <Image
    src={headerImage}
    class="rounded-img min-h-32 object-cover"
    loading="eager"
    alt=""
  />
  <p
    class="mt-10 max-w-screen-md font-serif text-7xl font-light tracking-tighter md:mx-auto"
  >
    Julio â€”
    <span class="font-sans uppercase">Android Developer</span>
    {m.at()} Paninti. {m.based_in()}
    <span class="font-sans uppercase">Bandung</span>
  </p>
  <p class="mt-10 max-w-screen-sm text-xl sm:mx-auto">
    {m.landing_page_desc()}
  </p>
  <div
    class="mb-32 mt-6 flex flex-row place-items-center justify-center text-xs uppercase"
  >
    <canvas id="scroll-down-canvas" class="h-6 w-6"></canvas>
    {m.scroll_down()}
  </div>
</div>

<script>
  import * as rive from "@rive-app/canvas-lite";
  const r = new rive.Rive({
    src: "scroll_down.riv",
    canvas: document.getElementById("scroll-down-canvas") as HTMLCanvasElement,
    autoplay: true,
    onLoad: () => {
      r.resizeDrawingSurfaceToCanvas();
    },
  });
</script>
