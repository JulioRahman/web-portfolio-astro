---
import { getRelativeLocaleUrl } from "astro:i18n";
import * as m from "../paraglide/messages.js";
---

<nav
  class="start-0 top-0 z-40 w-full bg-white md:fixed md:bg-transparent dark:bg-zinc-800 dark:md:bg-transparent"
>
  <div class="mx-auto flex flex-wrap items-center justify-between p-4">
    <a
      href={getRelativeLocaleUrl(Astro.currentLocale || "en")}
      class="flex items-center space-x-3 rtl:space-x-reverse"
    >
      <span
        class="self-center whitespace-nowrap rounded-full px-0 text-xl font-normal md:bg-white md:px-4 dark:text-white dark:md:bg-zinc-800"
        >Julio Rahman</span
      >
    </a>
    <div class="block w-auto">
      <ul
        class="mt-0 flex flex-row space-x-4 rounded-full bg-white p-4 py-0 text-lg font-normal rtl:space-x-reverse dark:bg-zinc-800"
      >
        <li>
          <a
            href={getRelativeLocaleUrl(Astro.currentLocale || "en")}
            class="block rounded px-3 py-2 text-zinc-900 hover:bg-zinc-100 md:p-0 md:hover:bg-transparent md:hover:text-zinc-500 dark:text-white dark:hover:bg-zinc-700 dark:hover:text-white md:dark:hover:bg-transparent md:dark:hover:text-zinc-500"
          >
            {m.project()}
          </a>
        </li>
        <li>
          <a
            href={getRelativeLocaleUrl(
              Astro.currentLocale || "en",
              "/experience",
            )}
            class="block rounded px-3 py-2 text-zinc-900 hover:bg-zinc-100 md:border-0 md:p-0 md:hover:bg-transparent md:hover:text-zinc-500 dark:text-white dark:hover:bg-zinc-700 dark:hover:text-white md:dark:hover:bg-transparent md:dark:hover:text-zinc-500"
          >
            {m.experience()}
          </a>
        </li>
        <li>
          <a
            href={getRelativeLocaleUrl(Astro.currentLocale || "en", "/about")}
            class="block rounded px-3 py-2 text-zinc-900 hover:bg-zinc-100 md:border-0 md:p-0 md:hover:bg-transparent md:hover:text-zinc-500 dark:text-white dark:hover:bg-zinc-700 dark:hover:text-white md:dark:hover:bg-transparent md:dark:hover:text-zinc-500"
          >
            {m.about()}
          </a>
        </li>
        <li>
          <button
            id="dropdownNavbarLanguageButton"
            data-dropdown-toggle="dropdownNavbarLanguage"
            class="block rounded px-3 py-2 text-zinc-900 hover:bg-zinc-100 md:border-0 md:p-0 md:hover:bg-transparent md:hover:text-zinc-500 dark:text-white dark:hover:bg-zinc-700 dark:hover:text-white md:dark:hover:bg-transparent md:dark:hover:text-zinc-500"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              viewBox="0 0 20 20"
              fill="currentColor"
              class="inline size-5"
            >
              <path
                d="M7.75 2.75a.75.75 0 0 0-1.5 0v1.258a32.987 32.987 0 0 0-3.599.278.75.75 0 1 0 .198 1.487A31.545 31.545 0 0 1 8.7 5.545 19.381 19.381 0 0 1 7 9.56a19.418 19.418 0 0 1-1.002-2.05.75.75 0 0 0-1.384.577 20.935 20.935 0 0 0 1.492 2.91 19.613 19.613 0 0 1-3.828 4.154.75.75 0 1 0 .945 1.164A21.116 21.116 0 0 0 7 12.331c.095.132.192.262.29.391a.75.75 0 0 0 1.194-.91c-.204-.266-.4-.538-.59-.815a20.888 20.888 0 0 0 2.333-5.332c.31.031.618.068.924.108a.75.75 0 0 0 .198-1.487 32.832 32.832 0 0 0-3.599-.278V2.75Z"
              ></path>
              <path
                fill-rule="evenodd"
                d="M13 8a.75.75 0 0 1 .671.415l4.25 8.5a.75.75 0 1 1-1.342.67L15.787 16h-5.573l-.793 1.585a.75.75 0 1 1-1.342-.67l4.25-8.5A.75.75 0 0 1 13 8Zm2.037 6.5L13 10.427 10.964 14.5h4.073Z"
                clip-rule="evenodd"></path>
            </svg>
            <svg
              xmlns="http://www.w3.org/2000/svg"
              viewBox="0 0 20 20"
              fill="currentColor"
              class="inline size-5"
            >
              <path
                fill-rule="evenodd"
                d="M5.22 8.22a.75.75 0 0 1 1.06 0L10 11.94l3.72-3.72a.75.75 0 1 1 1.06 1.06l-4.25 4.25a.75.75 0 0 1-1.06 0L5.22 9.28a.75.75 0 0 1 0-1.06Z"
                clip-rule="evenodd"></path>
            </svg>
          </button>
          <!-- Dropdown menu -->
          <div
            id="dropdownNavbarLanguage"
            class="z-10 hidden rounded-lg bg-white font-normal shadow dark:bg-zinc-700"
          >
            <ul
              class="py-2 text-sm text-zinc-700 dark:text-zinc-400"
              aria-labelledby="dropdownLargeButton"
            >
              <li>
                <a
                  href={getRelativeLocaleUrl("en")}
                  class="block px-4 py-2 hover:bg-zinc-100 dark:hover:bg-zinc-600 dark:hover:text-white"
                  >English</a
                >
              </li>
              <li>
                <a
                  href={getRelativeLocaleUrl("id")}
                  class="block px-4 py-2 hover:bg-zinc-100 dark:hover:bg-zinc-600 dark:hover:text-white"
                  >Bahasa</a
                >
              </li>
            </ul>
          </div>
        </li>
        <li>
          <button
            id="navbarThemeButton"
            onclick="toggleTheme()"
            class="block rounded px-3 py-2 text-zinc-900 hover:bg-zinc-100 md:border-0 md:p-0 md:hover:bg-transparent md:hover:text-zinc-500 dark:text-white dark:hover:bg-zinc-700 dark:hover:text-white md:dark:hover:bg-transparent md:dark:hover:text-zinc-500"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              viewBox="0 0 20 20"
              fill="currentColor"
              class="inline size-5 dark:hidden"
            >
              <path
                fill-rule="evenodd"
                d="M7.455 2.004a.75.75 0 0 1 .26.77 7 7 0 0 0 9.958 7.967.75.75 0 0 1 1.067.853A8.5 8.5 0 1 1 6.647 1.921a.75.75 0 0 1 .808.083Z"
                clip-rule="evenodd"></path>
            </svg>
            <svg
              xmlns="http://www.w3.org/2000/svg"
              viewBox="0 0 20 20"
              fill="currentColor"
              class="hidden size-5 dark:inline"
            >
              <path
                d="M10 2a.75.75 0 0 1 .75.75v1.5a.75.75 0 0 1-1.5 0v-1.5A.75.75 0 0 1 10 2ZM10 15a.75.75 0 0 1 .75.75v1.5a.75.75 0 0 1-1.5 0v-1.5A.75.75 0 0 1 10 15ZM10 7a3 3 0 1 0 0 6 3 3 0 0 0 0-6ZM15.657 5.404a.75.75 0 1 0-1.06-1.06l-1.061 1.06a.75.75 0 0 0 1.06 1.06l1.06-1.06ZM6.464 14.596a.75.75 0 1 0-1.06-1.06l-1.06 1.06a.75.75 0 0 0 1.06 1.06l1.06-1.06ZM18 10a.75.75 0 0 1-.75.75h-1.5a.75.75 0 0 1 0-1.5h1.5A.75.75 0 0 1 18 10ZM5 10a.75.75 0 0 1-.75.75h-1.5a.75.75 0 0 1 0-1.5h1.5A.75.75 0 0 1 5 10ZM14.596 15.657a.75.75 0 0 0 1.06-1.06l-1.06-1.061a.75.75 0 1 0-1.06 1.06l1.06 1.06ZM5.404 6.464a.75.75 0 0 0 1.06-1.06l-1.06-1.06a.75.75 0 1 0-1.061 1.06l1.06 1.06Z"
              ></path>
            </svg>
          </button>
        </li>
      </ul>
    </div>
  </div>
</nav>
