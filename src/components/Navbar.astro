---
import { getRelativeLocaleUrl } from "astro:i18n";
import * as m from "../paraglide/messages.js";
---

<nav
  class="start-0 top-0 z-40 w-full bg-white dark:bg-gray-900 md:fixed md:bg-transparent"
>
  <div class="mx-auto flex flex-wrap items-center justify-between p-4">
    <a
      href={getRelativeLocaleUrl(Astro.currentLocale || "en")}
      class="flex items-center space-x-3 rtl:space-x-reverse"
    >
      <span
        class="self-center whitespace-nowrap rounded-full px-4 text-xl font-normal dark:text-white md:bg-white"
        >Julio Rahman</span
      >
    </a>
    <button
      data-collapse-toggle="navbar-default"
      type="button"
      class="inline-flex h-10 w-10 items-center justify-center rounded-lg p-2 text-sm text-gray-500 dark:text-gray-400 md:hidden"
      aria-controls="navbar-default"
      aria-expanded="false"
    >
      <span class="sr-only">Open main menu</span>
      <svg
        class="h-5 w-5"
        aria-hidden="true"
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 17 14"
      >
        <path
          stroke="currentColor"
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M1 1h15M1 7h15M1 13h15"></path>
      </svg>
    </button>
    <div class="hidden w-full md:block md:w-auto" id="navbar-default">
      <ul
        class="mt-4 flex flex-col rounded-lg border border-gray-100 bg-gray-50 p-4 text-lg font-normal dark:border-gray-700 dark:bg-gray-800 md:mt-0 md:flex-row md:space-x-4 md:rounded-full md:border-0 md:bg-white md:py-0 md:dark:bg-gray-900 rtl:space-x-reverse"
      >
        <li>
          <a
            href={getRelativeLocaleUrl(Astro.currentLocale || "en")}
            class="block rounded px-3 py-2 text-gray-900 hover:bg-gray-100 dark:text-white dark:hover:bg-gray-700 dark:hover:text-white md:border-0 md:p-0 md:hover:bg-transparent md:hover:text-gray-500 md:dark:hover:bg-transparent md:dark:hover:text-blue-500"
          >
            {m.project()}
          </a>
        </li>
        <li>
          <a
            href={getRelativeLocaleUrl(
              Astro.currentLocale || "en",
              "/experience",
            )}
            class="block rounded px-3 py-2 text-gray-900 hover:bg-gray-100 dark:text-white dark:hover:bg-gray-700 dark:hover:text-white md:border-0 md:p-0 md:hover:bg-transparent md:hover:text-gray-500 md:dark:hover:bg-transparent md:dark:hover:text-blue-500"
          >
            {m.experience()}
          </a>
        </li>
        <li>
          <a
            href={getRelativeLocaleUrl(Astro.currentLocale || "en", "/about")}
            class="block rounded px-3 py-2 text-gray-900 hover:bg-gray-100 dark:text-white dark:hover:bg-gray-700 dark:hover:text-white md:border-0 md:p-0 md:hover:bg-transparent md:hover:text-gray-500 md:dark:hover:bg-transparent md:dark:hover:text-blue-500"
          >
            {m.about()}
          </a>
        </li>
        <li>
          <button
            id="dropdownNavbarLink"
            data-dropdown-toggle="dropdownNavbar"
            class="flex w-full items-center justify-between rounded px-3 py-2 text-gray-900 hover:bg-gray-100 dark:text-white dark:hover:bg-gray-700 dark:hover:text-white md:border-0 md:p-0 md:hover:bg-transparent md:hover:text-gray-500 md:dark:hover:bg-transparent md:dark:hover:text-blue-500"
            >{m.language()}
            <svg
              class="ms-2.5 h-2.5 w-2.5"
              aria-hidden="true"
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 10 6"
            >
              <path
                stroke="currentColor"
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="m1 1 4 4 4-4"></path>
            </svg></button
          >
          <!-- Dropdown menu -->
          <div
            id="dropdownNavbar"
            class="z-10 hidden w-44 rounded-lg bg-white font-normal shadow dark:bg-gray-700"
          >
            <ul
              class="py-2 text-sm text-gray-700 dark:text-gray-400"
              aria-labelledby="dropdownLargeButton"
            >
              <li>
                <a
                  href={getRelativeLocaleUrl("en")}
                  class="block px-4 py-2 hover:bg-gray-100 dark:hover:bg-gray-600 dark:hover:text-white"
                  >English</a
                >
              </li>
              <li>
                <a
                  href={getRelativeLocaleUrl("id")}
                  class="block px-4 py-2 hover:bg-gray-100 dark:hover:bg-gray-600 dark:hover:text-white"
                  >Bahasa</a
                >
              </li>
            </ul>
          </div>
        </li>
      </ul>
    </div>
  </div>
</nav>
